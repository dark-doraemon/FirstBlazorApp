@page "/templatecomponent"


<TableTemplate RowType="Person" RowData="persons" >

    @* Header1 là thuộc tính của TableTemplate có kiểu là RenderFragment
    chúng ta đã học nó ở bài 3 - “ChildContent” Property *@
    <Header1>
        <tr>
            <th>Name</th>
            <th>City</th>
        </tr>
    </Header1>

    @* RowTemplate là thuộc tính của TableTemplate, nó cũng tự như Header1 *@
    @* nhưng có kiểu là RenderFragment<RowType> *@
    @* do đó RowTemplate dùng để lưu template túc là nó lưu  *@
    @* <td>@p.Name</td>
       <td>@p.City</td> *@
    @* Context ở đây cứ hiểu là alias thôi, ta đặt tên là gì cũng được *@
    @* Nó tượng trưng cho dữ liệu sẽ truyền vào template *@
    <RowTemplate Context="p">
        <td>@p.Name</td>
        <td>@p.City</td>
    </RowTemplate>

</TableTemplate>

<b>
    See example in code Pages/TemplateComponent/TemplateComponent.razor and TableTemplate.razor
</b>
@code {

    //1 list Person, dữ liệu này sẽ truyền cho component con
    private List<Person> persons = new List<Person>{
        new Person { Name = "Jack", City = "New York" },
        new Person { Name = "Sarah", City = "Boston" },
        new Person { Name = "Chan", City = "Hong Kong" }
    };


    //định nghĩa Person class, kiểu dữ liệu này sẽ được truyền cho component con
    private class Person
    {
        public string Name { get; set; }
        public string City { get; set; }
    }
}